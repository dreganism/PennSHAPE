<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="#eaecee"
    tools:context="com.pennshape.app.fragment.PSDailyUpdateFragmentTab">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_text"
        android:layout_gravity="center"
        android:text="@string/ps_sample_date"
        android:layout_marginBottom="10dp"
        style="@style/UserDateFont"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:id="@+id/calendar"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_calendar"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/ps_border"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/ps_record_title"
            android:layout_margin="20dp"
            style="@style/DailyRecordTitleFont"/>
        <!--C1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/ps_c1_name"
                android:layout_gravity="center_vertical"
                style="@style/DailyRecordCategoryName"/>
            <EditText
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit1"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:hint="@string/ps_record_hint"
                android:inputType="number"
                style="@style/RecordTimeFont"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:id="@+id/spinner11"
                    />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:id="@+id/spinner12"
                    android:layout_marginLeft="10dp"
                    />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:id="@+id/spinner13"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--C2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/ps_c2_name"
                android:layout_gravity="center_vertical"
                style="@style/DailyRecordCategoryName"/>
            <EditText
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit2"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:hint="@string/ps_record_hint"
                android:inputType="number"
                style="@style/RecordTimeFont"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:id="@+id/spinner21"
                    />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:id="@+id/spinner22"
                    android:layout_marginLeft="10dp"
                    />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:id="@+id/spinner23"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--C3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/ps_c3_name"
                android:layout_gravity="center_vertical"
                style="@style/DailyRecordCategoryName"/>
            <EditText
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit3"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:hint="@string/ps_record_hint"
                android:inputType="number"
                style="@style/RecordTimeFont"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:id="@+id/spinner31"
                    />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:id="@+id/spinner32"
                    android:layout_marginLeft="10dp"
                    />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:id="@+id/spinner33"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/ps_sample_marker_stp"
            android:paddingBottom="30dp"
            style="@style/DailyRecordCategoryName"/>

        <!--Button-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_gravity="center_horizontal"
            android:text="@string/ps_record_button"/>

    </LinearLayout>

</LinearLayout>
