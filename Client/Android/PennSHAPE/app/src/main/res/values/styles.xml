<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="UserNameFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/ps_blue_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="UserProfileFont" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/ps_blue_dark</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="UserDateFont" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/ps_blue_deep</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="UserDetailedDateFont" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ps_blue_deep</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="MarkerViewDataFont">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/ps_blue_deep</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="UserInfoFont">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/ps_blue_dark</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
